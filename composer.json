{
    "name": "lapinskas/roadrunner-ubiquity",
    "type": "library",
    "version": "1.0.4",
    "description": "RoadRunner and Ubiquity integration",
    "keywords": ["roadrunner","ubiquity"],
    "homepage": "https://github.com/Lapinskas/roadrunner-ubiquity",
    "license": "MIT",
    "authors": [
        {
            "name": "Vladas Lapinskas",
            "email": "vlad.lapinskas@gmail.com",
            "role": "Author"
        }
    ],
    "require" : {
        "php": "^7.4.0",
	    "spiral/roadrunner": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "RoadRunnerUbiquity\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "vendor/bin/rr get",
            "cp vendor/lapinskas/roadrunner-ubiquity/sample/.rr.yml ./ubiquity/.rr.yml",
            "cp vendor/lapinskas/roadrunner-ubiquity/sample/worker.php ./.ubiquity/rrIndex.php"
        ]
    }
}
